<%- include('../layouts/header') %>

<div class="container-fluid py-4">
  <!-- Header avec breadcrumb -->
  <div class="row mb-4">
    <div class="col-12">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="/dashboard">Tableau de bord</a>
          </li>
          <li class="breadcrumb-item">
            <a href="/transactions">Transactions</a>
          </li>
          <li class="breadcrumb-item active">
            Transaction #<%= transaction.id %>
          </li>
        </ol>
      </nav>

      <div class="d-flex justify-content-between align-items-center">
        <h1 class="h3 mb-0">
          <i class="fas fa-eye text-info me-2"></i>
          Détail Transaction
        </h1>
        <div>
          <a
            href="/transactions/<%= transaction.id %>/edit"
            class="btn btn-warning me-2"
          >
            <i class="fas fa-edit me-1"></i>
            Modifier
          </a>
          <button
            type="button"
            class="btn btn-danger"
            onclick="confirmDelete()"
          >
            <i class="fas fa-trash me-1"></i>
            Supprimer
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
      <!-- Card principale de la transaction -->
      <div class="card shadow-lg mb-4">
        <div
          class="card-header bg-<%= transaction.type === 'income' ? 'success' : 'danger' %> text-white"
        >
          <div class="d-flex justify-content-between align-items-center">
            <h4 class="card-title mb-0">
              <i
                class="fas fa-arrow-<%= transaction.type === 'income' ? 'up' : 'down' %> me-2"
              ></i>
              <%= transaction.type === 'income' ? 'Revenu' : 'Dépense' %>
            </h4>
            <span class="badge bg-light text-dark">
              #<%= transaction.id %>
            </span>
          </div>
        </div>

        <div class="card-body">
          <div class="row">
            <!-- Informations principales -->
            <div class="col-md-8">
              <h2
                class="text-<%= transaction.type === 'income' ? 'success' : 'danger' %> mb-3"
              >
                <%= transaction.type === 'income' ? '+' : '-' %><%=
                transaction.amount.toLocaleString('fr-FR', { style: 'currency',
                currency: 'EUR' }) %>
              </h2>

              <div class="mb-3">
                <h5 class="text-muted mb-2">Catégorie</h5>
                <span class="badge bg-secondary fs-6 px-3 py-2">
                  <%= transaction.category %>
                </span>
              </div>

              <div class="mb-3">
                <h5 class="text-muted mb-2">Date</h5>
                <p class="fs-5 mb-0">
                  <i class="fas fa-calendar me-2"></i>
                  <%= new Date(transaction.date).toLocaleDateString('fr-FR', {
                  weekday: 'long', year: 'numeric', month: 'long', day:
                  'numeric' }) %>
                </p>
              </div>

              <% if (transaction.description) { %>
              <div class="mb-3">
                <h5 class="text-muted mb-2">Description</h5>
                <div class="bg-light p-3 rounded">
                  <p class="mb-0"><%= transaction.description %></p>
                </div>
              </div>
              <% } %>
            </div>

            <!-- Informations métadonnées -->
            <div class="col-md-4">
              <div class="card bg-light">
                <div class="card-header">
                  <h6 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    Informations
                  </h6>
                </div>
                <div class="card-body">
                  <div class="mb-3">
                    <small class="text-muted">Créée le</small>
                    <p class="mb-0">
                      <%= new
                      Date(transaction.createdAt).toLocaleDateString('fr-FR') %>
                      <br />
                      <small class="text-muted">
                        à <%= new
                        Date(transaction.createdAt).toLocaleTimeString('fr-FR')
                        %>
                      </small>
                    </p>
                  </div>

                  <% if (transaction.updatedAt && transaction.updatedAt >
                  transaction.createdAt) { %>
                  <div class="mb-3">
                    <small class="text-muted">Modifiée le</small>
                    <p class="mb-0">
                      <%= new
                      Date(transaction.updatedAt).toLocaleDateString('fr-FR') %>
                      <br />
                      <small class="text-muted">
                        à <%= new
                        Date(transaction.updatedAt).toLocaleTimeString('fr-FR')
                        %>
                      </small>
                    </p>
                  </div>
                  <% } %>

                  <div class="mb-3">
                    <small class="text-muted">Propriétaire</small>
                    <p class="mb-0">
                      <i class="fas fa-user me-1"></i>
                      <%= transaction.user ? transaction.user.name :
                      'Utilisateur' %>
                    </p>
                  </div>

                  <div>
                    <small class="text-muted">Statut</small>
                    <p class="mb-0">
                      <span class="badge bg-success">
                        <i class="fas fa-check me-1"></i>
                        Validée
                      </span>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Actions rapides -->
      <div class="card mb-4">
        <div class="card-header">
          <h6 class="card-title mb-0">
            <i class="fas fa-bolt me-2"></i>
            Actions Rapides
          </h6>
        </div>
        <div class="card-body">
          <div class="row g-3">
            <div class="col-md-3">
              <a
                href="/transactions/create?type=<%= transaction.type %>&category=<%= encodeURIComponent(transaction.category) %>"
                class="btn btn-outline-primary w-100"
              >
                <i class="fas fa-copy me-2"></i>
                <div>Dupliquer</div>
                <small class="text-muted">Même catégorie</small>
              </a>
            </div>

            <div class="col-md-3">
              <a
                href="/transactions?category=<%= encodeURIComponent(transaction.category) %>"
                class="btn btn-outline-info w-100"
              >
                <i class="fas fa-filter me-2"></i>
                <div>Voir similaires</div>
                <small class="text-muted">Même catégorie</small>
              </a>
            </div>

            <div class="col-md-3">
              <button
                type="button"
                class="btn btn-outline-success w-100"
                onclick="exportSingle()"
              >
                <i class="fas fa-download me-2"></i>
                <div>Exporter</div>
                <small class="text-muted">CSV</small>
              </button>
            </div>

            <div class="col-md-3">
              <button
                type="button"
                class="btn btn-outline-secondary w-100"
                onclick="shareTransaction()"
              >
                <i class="fas fa-share me-2"></i>
                <div>Partager</div>
                <small class="text-muted">Lien</small>
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Historique des modifications -->
      <% if (transaction.updatedAt && transaction.updatedAt >
      transaction.createdAt) { %>
      <div class="card mb-4">
        <div class="card-header">
          <h6 class="card-title mb-0">
            <i class="fas fa-history me-2"></i>
            Historique des Modifications
          </h6>
        </div>
        <div class="card-body">
          <div class="timeline">
            <div class="timeline-item">
              <div class="timeline-marker bg-warning"></div>
              <div class="timeline-content">
                <h6 class="mb-1">Transaction modifiée</h6>
                <p class="text-muted mb-0">
                  <i class="fas fa-clock me-1"></i>
                  <%= new
                  Date(transaction.updatedAt).toLocaleDateString('fr-FR') %> à
                  <%= new
                  Date(transaction.updatedAt).toLocaleTimeString('fr-FR') %>
                </p>
              </div>
            </div>

            <div class="timeline-item">
              <div class="timeline-marker bg-success"></div>
              <div class="timeline-content">
                <h6 class="mb-1">Transaction créée</h6>
                <p class="text-muted mb-0">
                  <i class="fas fa-clock me-1"></i>
                  <%= new
                  Date(transaction.createdAt).toLocaleDateString('fr-FR') %> à
                  <%= new
                  Date(transaction.createdAt).toLocaleTimeString('fr-FR') %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% } %>

      <!-- Navigation -->
      <div class="card">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <a href="/transactions" class="btn btn-secondary">
              <i class="fas fa-arrow-left me-1"></i>
              Retour à la liste
            </a>

            <div class="btn-group" role="group">
              <a
                href="/transactions/<%= transaction.id %>/edit"
                class="btn btn-outline-warning"
              >
                <i class="fas fa-edit me-1"></i>
                Modifier
              </a>
              <button
                type="button"
                class="btn btn-outline-danger"
                onclick="confirmDelete()"
              >
                <i class="fas fa-trash me-1"></i>
                Supprimer
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal de confirmation de suppression -->
<div
  class="modal fade"
  id="deleteModal"
  tabindex="-1"
  aria-labelledby="deleteModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">
          <i class="fas fa-exclamation-triangle text-warning me-2"></i>
          Confirmer la suppression
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="alert alert-danger">
          <h6 class="alert-heading">Attention !</h6>
          <p class="mb-0">
            Vous êtes sur le point de supprimer définitivement cette
            transaction.
          </p>
        </div>

        <div class="card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <span
                  class="badge bg-<%= transaction.type === 'income' ? 'success' : 'danger' %> mb-2"
                >
                  <i
                    class="fas fa-arrow-<%= transaction.type === 'income' ? 'up' : 'down' %> me-1"
                  ></i>
                  <%= transaction.type === 'income' ? 'Revenu' : 'Dépense' %>
                </span>
                <h6 class="mb-0"><%= transaction.category %></h6>
                <% if (transaction.description) { %>
                <small class="text-muted"><%= transaction.description %></small>
                <% } %>
              </div>
              <div class="text-end">
                <h5
                  class="text-<%= transaction.type === 'income' ? 'success' : 'danger' %> mb-0"
                >
                  <%= transaction.type === 'income' ? '+' : '-' %><%=
                  transaction.amount.toLocaleString('fr-FR', { style:
                  'currency', currency: 'EUR' }) %>
                </h5>
                <small class="text-muted">
                  <%= new Date(transaction.date).toLocaleDateString('fr-FR') %>
                </small>
              </div>
            </div>
          </div>
        </div>

        <p class="mt-3 mb-0">
          <strong>Cette action est irréversible.</strong> Êtes-vous sûr de
          vouloir continuer ?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Annuler
        </button>
        <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
          <i class="fas fa-trash me-1"></i>
          Supprimer définitivement
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Modal de partage -->
<div
  class="modal fade"
  id="shareModal"
  tabindex="-1"
  aria-labelledby="shareModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="shareModalLabel">
          <i class="fas fa-share me-2"></i>
          Partager la Transaction
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="mb-3">
          <label for="shareUrl" class="form-label">Lien de partage</label>
          <div class="input-group">
            <input type="text" class="form-control" id="shareUrl" readonly />
            <button
              class="btn btn-outline-secondary"
              type="button"
              onclick="copyToClipboard()"
            >
              <i class="fas fa-copy"></i>
            </button>
          </div>
          <div class="form-text">
            Ce lien permet de voir cette transaction uniquement.
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label">Partager via</label>
          <div class="d-flex gap-2">
            <button
              type="button"
              class="btn btn-outline-primary"
              onclick="shareViaEmail()"
            >
              <i class="fas fa-envelope me-1"></i>
              Email
            </button>
            <button
              type="button"
              class="btn btn-outline-success"
              onclick="shareViaWhatsApp()"
            >
              <i class="fab fa-whatsapp me-1"></i>
              WhatsApp
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Styles personnalisés -->
<style>
  .timeline {
    position: relative;
    padding-left: 30px;
  }

  .timeline::before {
    content: "";
    position: absolute;
    left: 10px;
    top: 0;
    bottom: 0;
    width: 2px;
    background-color: #dee2e6;
  }

  .timeline-item {
    position: relative;
    margin-bottom: 20px;
  }

  .timeline-marker {
    position: absolute;
    left: -25px;
    top: 5px;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: 2px solid #fff;
    box-shadow: 0 0 0 2px #dee2e6;
  }

  .timeline-content {
    background-color: #f8f9fa;
    padding: 15px;
    border-radius: 8px;
    border-left: 3px solid #dee2e6;
  }
</style>

<!-- JavaScript -->
<script>
  let shareUrl = '';

  document.addEventListener('DOMContentLoaded', function() {
    // Génération de l'URL de partage
    shareUrl = window.location.href;
    document.getElementById('shareUrl').value = shareUrl;
  });

  // Fonction de confirmation de suppression
  function confirmDelete() {
    const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
    modal.show();
  }

  // Suppression confirmée
  document.getElementById('confirmDeleteBtn').addEventListener('click', async function() {
    try {
      const response = await fetch('/transactions/<%= transaction.id %>', {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json',
          'Accept': 'application/json'
        }
      });

      const result = await response.json();

      if (result.success) {
        // Fermeture de la modal
        bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();

        // Affichage du message de succès
        showToast('Transaction supprimée avec succès !', 'success');

        // Redirection vers la liste
        setTimeout(() => {
          window.location.href = '/transactions';
        }, 1500);
      } else {
        showToast('Erreur lors de la suppression', 'error');
      }
    } catch (error) {
      console.error('Erreur:', error);
      showToast('Erreur lors de la suppression', 'error');
    }
  });

  // Export d'une seule transaction
  function exportSingle() {
    const transactionData = {
      id: <%= transaction.id %>,
      type: '<%= transaction.type %>',
      amount: <%= transaction.amount %>,
      category: '<%= transaction.category %>',
      description: '<%= transaction.description || '' %>',
      date: '<%= transaction.date %>'
    };

    // Création du CSV
    const headers = 'Date,Type,Catégorie,Description,Montant\n';
    const date = new Date(transactionData.date).toLocaleDateString('fr-FR');
    const type = transactionData.type === 'income' ? 'Revenu' : 'Dépense';
    const category = `"${transactionData.category}"`;
    const description = `"${transactionData.description}"`;
    const amount = transactionData.amount.toString().replace('.', ',');

    const csvContent = headers + `${date},${type},${category},${description},${amount}`;

    // Téléchargement
    const blob = new Blob(['\uFEFF' + csvContent], { type: 'text/csv;charset=utf-8;' });
    const link = document.createElement('a');
    link.href = URL.createObjectURL(blob);
    link.download = `transaction_${transactionData.id}_${new Date().toISOString().split('T')[0]}.csv`;
    link.click();

    showToast('Export terminé !', 'success');
  }

  // Partage de la transaction
  function shareTransaction() {
    const modal = new bootstrap.Modal(document.getElementById('shareModal'));
    modal.show();
  }

  // Copie dans le presse-papiers
  async function copyToClipboard() {
    try {
      await navigator.clipboard.writeText(shareUrl);
      showToast('Lien copié dans le presse-papiers !', 'success');
    } catch (err) {
      // Fallback pour navigateurs plus anciens
      const input = document.getElementById('shareUrl');
      input.select();
      document.execCommand('copy');
      showToast('Lien copié dans le presse-papiers !', 'success');
    }
  }

  // Partage via email
  function shareViaEmail() {
    const subject = encodeURIComponent('Transaction - <%= transaction.category %>');
    const body = encodeURIComponent(`Voici le détail d'une transaction :\n\n${shareUrl}`);
    window.open(`mailto:?subject=${subject}&body=${body}`, '_blank');
  }

  // Partage via WhatsApp
  function shareViaWhatsApp() {
    const text = encodeURIComponent(`Transaction: <%= transaction.category %> - <%= transaction.amount.toLocaleString('fr-FR', { style: 'currency', currency: 'EUR' }) %>\n${shareUrl}`);
    window.open(`https://wa.me/?text=${text}`, '_blank');
  }

  // Fonction pour afficher les toasts
  function showToast(message, type) {
    const toastContainer = document.getElementById('toast-container') || createToastContainer();

    const toast = document.createElement('div');
    toast.className = `toast align-items-center text-white bg-${type === 'success' ? 'success' : 'danger'} border-0`;
    toast.setAttribute('role', 'alert');
    toast.innerHTML = `
      <div class="d-flex">
        <div class="toast-body">
          <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'} me-2"></i>
          ${message}
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
      </div>
    `;

    toastContainer.appendChild(toast);

    const bsToast = new bootstrap.Toast(toast, {
      autohide: true,
      delay: 3000
    });

    bsToast.show();

    toast.addEventListener('hidden.bs.toast', () => {
      toast.remove();
    });
  }

  function createToastContainer() {
    const container = document.createElement('div');
    container.id = 'toast-container';
    container.className = 'toast-container position-fixed top-0 end-0 p-3';
    container.style.zIndex = '1060';
    document.body.appendChild(container);
    return container;
  }
</script>

